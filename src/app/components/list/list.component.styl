@import './../../../assets/stylus/_settings'


.clients_preview_list{
  overflow-y: scroll;
  height: 94%;
  width: 100%;
}
.client_preview {
  height:100px;
  border-bottom: 1px solid;
  text-align center;
  &:hover{
    -webkit-box-shadow:0px 0px 15px 1px #655d5d inset;
    -moz-box-shadow:0px 0px 15px 1px #655d5d inset;
    box-shadow:0px 0px 15px 1px #655d5d inset;
  }

  .img_all_clients {
    display: inline-block;
    width: 50px
    height: 50px
    min-width 40px
    margin-top calc(100% - 36px)
    background-size cover
    background-repeat no-repeat
    margin-left main-content-side-padding
    border-radius: 50%
  }
  .img_client_preview_conteiner{
    display: inline-block;
    width: 60px;
    height: 100%;
    float: left;
  }
  .info_client_preview_conteiner{
    display: inline-block;
    width: calc(100% - 60px);
    height: 100%;
    overflow: hidden;
  }
  p{
    margin-left 10px
  }
}
.active{
  -webkit-box-shadow:0px 0px 15px 1px #655d5d inset;
  -moz-box-shadow:0px 0px 15px 1px #655d5d inset;
  box-shadow:0px 0px 15px 1px #655d5d inset;
}

.client_preview:first-child{
  border-top: 1px solid;
}