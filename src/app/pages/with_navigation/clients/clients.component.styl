@import './../../../../assets/stylus/_settings'


.all_cients{
  height:100%
  width: 220px
  border-right: 1px solid;
  font-size: 14px;
  margin-left - main-content-side-padding
  .search_client{
    input{
      width:76%;
      margin-right:-5px
      border: 0;
      margin-left: 9px;
      text-align: center;

    }
    button{
      width:20%
      padding: 4px;
      padding-left: 0px;
      border-radius 0px
    }
  }


  .client_preview {
    height:100px;
    border-bottom: 1px solid;
      &:hover{
        -webkit-box-shadow:0px 0px 15px 1px #655d5d inset;
        -moz-box-shadow:0px 0px 15px 1px #655d5d inset;
        box-shadow:0px 0px 15px 1px #655d5d inset;
      }

    .img_all_clients {
      display: inline-block;
      width: 40px
      height: 40px
      min-width 40px
      margin-top calc(100% - 36px)
      background-image url('../../../../assets/images/user.jpg')
      background-size cover
      background-repeat no-repeat
      margin-left main-content-side-padding
    }
    .img_client_preview_conteiner{
      display: inline-block;
      width: 60px;
      height: 100%;
      float: left;
    }
    .info_client_preview_conteiner{
      display: inline-block;
      width: calc(100% - 60px);
      height: 100%;
      overflow: hidden;
    }
      p{
        margin-left 10px
      }
  }
  .active{
    -webkit-box-shadow:0px 0px 15px 1px #655d5d inset;
    -moz-box-shadow:0px 0px 15px 1px #655d5d inset;
    box-shadow:0px 0px 15px 1px #655d5d inset;
  }

}
.client_preview:first-child{
  border-top: 1px solid;
}
